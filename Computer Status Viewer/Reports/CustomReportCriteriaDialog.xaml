<Window x:Class="Computer_Status_Viewer.Reports.CustomReportCriteriaDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Расширенная настройка пользовательского отчёта" 
        Icon="/Ico/Logo.ico"
        Width="900" Height="700"
        MinWidth="700" MinHeight="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2D3748"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style x:Key="SectionTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#4A5568"/>
            <Setter Property="Margin" Value="0,15,0,5"/>
        </Style>
        
        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Margin" Value="0,3"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#2D3748"/>
        </Style>
        
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E2E8F0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#CBD5E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Заголовок с предустановками -->
        <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Расширенная настройка пользовательского отчёта" 
                               Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Text="Выберите критерии, фильтры и настройки для создания отчёта" 
                               FontSize="12" Foreground="#666" Margin="0,5,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ComboBox x:Name="PresetComboBox" 
                              Width="200" 
                              Margin="0,0,10,0"
                              SelectionChanged="PresetComboBox_SelectionChanged">
                        <ComboBoxItem Content="Выберите предустановку..." IsSelected="True"/>
                        <ComboBoxItem Content="Быстрый обзор системы"/>
                        <ComboBoxItem Content="Полная диагностика"/>
                        <ComboBoxItem Content="Производительность"/>
                        <ComboBoxItem Content="Безопасность"/>
                        <ComboBoxItem Content="Сетевая информация"/>
                        <ComboBoxItem Content="Пользовательские данные"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Основное содержимое с вкладками -->
        <TabControl Grid.Row="1" Margin="20" x:Name="MainTabControl">
            <!-- Вкладка основных настроек -->
            <TabItem Header="📋 Основные настройки">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                    <StackPanel>
                        <!-- Информация об отчёте -->
                        <TextBlock Text="Информация об отчёте" Style="{StaticResource SectionTextStyle}"/>
                        
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Название отчёта:" FontSize="12" Margin="0,0,0,5"/>
                                <TextBox x:Name="ReportTitleTextBox" 
                                         Text="Пользовательский отчёт"
                                         FontSize="13" Padding="8,6"
                                         BorderBrush="#CBD5E0" BorderThickness="1"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Категория:" FontSize="12" Margin="0,0,0,5"/>
                                <ComboBox x:Name="CategoryComboBox" 
                                          FontSize="13" Padding="8,6"
                                          BorderBrush="#CBD5E0" BorderThickness="1">
                                    <ComboBoxItem Content="Общая диагностика" IsSelected="True"/>
                                    <ComboBoxItem Content="Производительность"/>
                                    <ComboBoxItem Content="Безопасность"/>
                                    <ComboBoxItem Content="Сетевая диагностика"/>
                                    <ComboBoxItem Content="Аппаратная диагностика"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                        
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Описание отчёта:" FontSize="12" Margin="0,0,0,5"/>
                            <TextBox x:Name="ReportDescriptionTextBox" 
                                     Text="Отчёт создан пользователем с выбранными критериями"
                                     FontSize="13" Padding="8,6"
                                     BorderBrush="#CBD5E0" BorderThickness="1"
                                     Height="60" TextWrapping="Wrap"
                                     AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>
                        
                        <!-- Критерии отчёта -->
                        <TextBlock Text="Выберите критерии для включения в отчёт:" Style="{StaticResource SectionTextStyle}"/>
                        
                        <!-- Системная информация -->
                        <Expander Header="🖥️ Системная информация" IsExpanded="True" Margin="0,10,0,0">
                            <StackPanel Margin="20,10,0,0">
                                <CheckBox x:Name="IncludeOSInfo" Content="Информация об операционной системе" 
                                          Style="{StaticResource CheckBoxStyle}" IsChecked="True"/>
                                <CheckBox x:Name="IncludeComputerInfo" Content="Информация о компьютере" 
                                          Style="{StaticResource CheckBoxStyle}" IsChecked="True"/>
                                <CheckBox x:Name="IncludeUserInfo" Content="Информация о пользователе" 
                                          Style="{StaticResource CheckBoxStyle}" IsChecked="True"/>
                                <CheckBox x:Name="IncludeDateTimeInfo" Content="Дата и время создания" 
                                          Style="{StaticResource CheckBoxStyle}" IsChecked="True"/>
                                <CheckBox x:Name="IncludeEnvironmentInfo" Content="Переменные окружения" 
                                          Style="{StaticResource CheckBoxStyle}" IsChecked="False"/>
                            </StackPanel>
                        </Expander>
                        
                        <!-- Аппаратная информация -->
                        <Expander Header="🔧 Аппаратная информация" IsExpanded="True" Margin="0,5,0,0">
                            <StackPanel Margin="20,10,0,0">
                                <CheckBox x:Name="IncludeCPUInfo" Content="Информация о процессоре" 
                                          Style="{StaticResource CheckBoxStyle}" IsChecked="True"/>
                                <CheckBox x:Name="IncludeMemoryInfo" Content="Информация о памяти" 
                                          Style="{StaticResource CheckBoxStyle}" IsChecked="True"/>
                                <CheckBox x:Name="IncludeDiskInfo" Content="Информация о дисках" 
                                          Style="{StaticResource CheckBoxStyle}" IsChecked="True"/>
                                <CheckBox x:Name="IncludeGPUInfo" Content="Информация о видеокарте" 
                                          Style="{StaticResource CheckBoxStyle}" IsChecked="True"/>
                                <CheckBox x:Name="IncludeMotherboardInfo" Content="Информация о материнской плате" 
                                          Style="{StaticResource CheckBoxStyle}" IsChecked="True"/>
                                <CheckBox x:Name="IncludeBiosInfo" Content="Информация о BIOS" 
                                          Style="{StaticResource CheckBoxStyle}" IsChecked="False"/>
                                <CheckBox x:Name="IncludeUSBInfo" Content="USB устройства" 
                                          Style="{StaticResource CheckBoxStyle}" IsChecked="False"/>
                            </StackPanel>
                        </Expander>
                        
                        <!-- Производительность -->
                        <Expander Header="⚡ Производительность" IsExpanded="False" Margin="0,5,0,0">
                            <StackPanel Margin="20,10,0,0">
                                <CheckBox x:Name="IncludePerformanceInfo" Content="Текущая производительность системы" 
                                          Style="{StaticResource CheckBoxStyle}" IsChecked="False"/>
                                <CheckBox x:Name="IncludeNetworkInfo" Content="Информация о сети" 
                                          Style="{StaticResource CheckBoxStyle}" IsChecked="False"/>
                                <CheckBox x:Name="IncludeProcessInfo" Content="Информация о процессах" 
                                          Style="{StaticResource CheckBoxStyle}" IsChecked="False"/>
                                <CheckBox x:Name="IncludeServiceInfo" Content="Системные службы" 
                                          Style="{StaticResource CheckBoxStyle}" IsChecked="False"/>
                                <CheckBox x:Name="IncludeStartupInfo" Content="Программы автозагрузки" 
                                          Style="{StaticResource CheckBoxStyle}" IsChecked="False"/>
                            </StackPanel>
                        </Expander>
                        
                        <!-- Безопасность -->
                        <Expander Header="🔒 Безопасность" IsExpanded="False" Margin="0,5,0,0">
                            <StackPanel Margin="20,10,0,0">
                                <CheckBox x:Name="IncludeSecurityInfo" Content="Настройки безопасности" 
                                          Style="{StaticResource CheckBoxStyle}" IsChecked="False"/>
                                <CheckBox x:Name="IncludeFirewallInfo" Content="Настройки брандмауэра" 
                                          Style="{StaticResource CheckBoxStyle}" IsChecked="False"/>
                                <CheckBox x:Name="IncludeAntivirusInfo" Content="Антивирусная защита" 
                                          Style="{StaticResource CheckBoxStyle}" IsChecked="False"/>
                                <CheckBox x:Name="IncludeUpdatesInfo" Content="Обновления системы" 
                                          Style="{StaticResource CheckBoxStyle}" IsChecked="False"/>
                            </StackPanel>
                        </Expander>
                        
                        <!-- Дополнительные опции -->
                        <Expander Header="📁 Дополнительные опции" IsExpanded="False" Margin="0,5,0,0">
                            <StackPanel Margin="20,10,0,0">
                                <CheckBox x:Name="IncludeScreenshots" Content="Включить скриншоты (если доступно)" 
                                          Style="{StaticResource CheckBoxStyle}" IsChecked="False"/>
                                <CheckBox x:Name="IncludeLogs" Content="Включить системные логи" 
                                          Style="{StaticResource CheckBoxStyle}" IsChecked="False"/>
                                <CheckBox x:Name="IncludeRegistryInfo" Content="Ключевые записи реестра" 
                                          Style="{StaticResource CheckBoxStyle}" IsChecked="False"/>
                                <CheckBox x:Name="IncludeInstalledSoftware" Content="Установленное ПО" 
                                          Style="{StaticResource CheckBoxStyle}" IsChecked="False"/>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Вкладка фильтров -->
            <TabItem Header="🔍 Фильтры и настройки">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Настройка фильтров и параметров сбора данных" Style="{StaticResource SectionTextStyle}"/>
                        
                        <!-- Временные фильтры -->
                        <TextBlock Text="⏰ Временные фильтры" FontSize="13" FontWeight="Medium" 
                                   Foreground="#4A5568" Margin="0,15,0,5"/>
                        <StackPanel Margin="20,0,0,15">
                            <CheckBox x:Name="UseTimeFilter" Content="Использовать временной фильтр" 
                                      Style="{StaticResource CheckBoxStyle}" IsChecked="False"/>
                            <Grid Margin="20,5,0,0" IsEnabled="{Binding ElementName=UseTimeFilter, Path=IsChecked}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="С:" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <DatePicker x:Name="StartDatePicker" Grid.Column="1" Margin="0,0,10,0"/>
                                <TextBlock Text="По:" Grid.Column="2" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <DatePicker x:Name="EndDatePicker" Grid.Column="3"/>
                            </Grid>
                        </StackPanel>
                        
                        <!-- Фильтры производительности -->
                        <TextBlock Text="⚡ Фильтры производительности" FontSize="13" FontWeight="Medium" 
                                   Foreground="#4A5568" Margin="0,15,0,5"/>
                        <StackPanel Margin="20,0,0,15">
                            <CheckBox x:Name="IncludeOnlyHighCPU" Content="Только процессы с высокой загрузкой CPU (>50%)" 
                                      Style="{StaticResource CheckBoxStyle}" IsChecked="False"/>
                            <CheckBox x:Name="IncludeOnlyHighMemory" Content="Только процессы с высоким потреблением памяти (>100MB)" 
                                      Style="{StaticResource CheckBoxStyle}" IsChecked="False"/>
                            <CheckBox x:Name="IncludeOnlyRunningServices" Content="Только запущенные службы" 
                                      Style="{StaticResource CheckBoxStyle}" IsChecked="False"/>
                        </StackPanel>
                        
                        <!-- Фильтры дисков -->
                        <TextBlock Text="💾 Фильтры дисков" FontSize="13" FontWeight="Medium" 
                                   Foreground="#4A5568" Margin="0,15,0,5"/>
                        <StackPanel Margin="20,0,0,15">
                            <CheckBox x:Name="IncludeOnlySystemDrives" Content="Только системные диски" 
                                      Style="{StaticResource CheckBoxStyle}" IsChecked="False"/>
                            <CheckBox x:Name="IncludeOnlyRemovableDrives" Content="Только съёмные носители" 
                                      Style="{StaticResource CheckBoxStyle}" IsChecked="False"/>
                            <CheckBox x:Name="IncludeOnlyLowSpaceDrives" Content="Только диски с малым свободным местом (&lt;10%)" 
                                      Style="{StaticResource CheckBoxStyle}" IsChecked="False"/>
                        </StackPanel>
                        
                        <!-- Настройки детализации -->
                        <TextBlock Text="📊 Настройки детализации" FontSize="13" FontWeight="Medium" 
                                   Foreground="#4A5568" Margin="0,15,0,5"/>
                        <StackPanel Margin="20,0,0,15">
                            <TextBlock Text="Уровень детализации:" FontSize="12" Margin="0,0,0,5"/>
                            <ComboBox x:Name="DetailLevelComboBox" Width="200" HorizontalAlignment="Left">
                                <ComboBoxItem Content="Базовая" IsSelected="True"/>
                                <ComboBoxItem Content="Средняя"/>
                                <ComboBoxItem Content="Высокая"/>
                                <ComboBoxItem Content="Максимальная"/>
                            </ComboBox>
                            
                            <CheckBox x:Name="IncludeRawData" Content="Включить сырые данные" 
                                      Style="{StaticResource CheckBoxStyle}" IsChecked="False" Margin="0,10,0,0"/>
                            <CheckBox x:Name="IncludeStatistics" Content="Включить статистику" 
                                      Style="{StaticResource CheckBoxStyle}" IsChecked="True" Margin="0,5,0,0"/>
                            <CheckBox x:Name="IncludeRecommendations" Content="Включить рекомендации" 
                                      Style="{StaticResource CheckBoxStyle}" IsChecked="True" Margin="0,5,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
        </TabControl>
        
        <!-- Кнопки управления -->
        <Border Grid.Row="2" Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="SelectAllButton" 
                            Content="Выбрать всё" 
                            Style="{StaticResource ButtonStyle}"
                            Background="#17A2B8"
                            Foreground="White"
                            BorderThickness="0"
                            Click="SelectAllButton_Click"
                            Margin="0,0,10,0"/>
                    <Button x:Name="ClearAllButton" 
                            Content="Очистить всё" 
                            Style="{StaticResource ButtonStyle}"
                            Background="#6C757D"
                            Foreground="White"
                            BorderThickness="0"
                            Click="ClearAllButton_Click"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="PreviewButton" 
                            Content="Предпросмотр" 
                            Style="{StaticResource ButtonStyle}"
                            Background="#FFC107"
                            Foreground="Black"
                            BorderThickness="0"
                            Click="PreviewButton_Click"
                            Margin="0,0,10,0"/>
                    <Button x:Name="CancelButton" 
                            Content="Отмена" 
                            Style="{StaticResource ButtonStyle}"
                            Background="#E2E8F0"
                            BorderBrush="#CBD5E0"
                            BorderThickness="1"
                            Click="CancelButton_Click"/>
                    <Button x:Name="CreateButton" 
                            Content="Создать отчёт" 
                            Style="{StaticResource ButtonStyle}"
                            Background="#4682B4"
                            Foreground="White"
                            BorderThickness="0"
                            Click="CreateButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
