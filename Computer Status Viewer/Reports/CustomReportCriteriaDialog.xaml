<Window x:Class="Computer_Status_Viewer.Reports.CustomReportCriteriaDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор критериев пользовательского отчёта" 
        Icon="/Ico/Logo.ico"
        Width="600" Height="500"
        MinWidth="500" MinHeight="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2D3748"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style x:Key="SectionTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#4A5568"/>
            <Setter Property="Margin" Value="0,15,0,5"/>
        </Style>
        
        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Margin" Value="0,3"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#2D3748"/>
        </Style>
        
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E2E8F0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#CBD5E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Основное содержимое -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <!-- Заголовок -->
                <TextBlock Text="Настройка пользовательского отчёта" 
                           Style="{StaticResource HeaderTextStyle}"/>
                
                <!-- Название и описание отчёта -->
                <TextBlock Text="Основная информация" Style="{StaticResource SectionTextStyle}"/>
                
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Название отчёта:" FontSize="12" Margin="0,0,0,5"/>
                    <TextBox x:Name="ReportTitleTextBox" 
                             Text="Пользовательский отчёт"
                             FontSize="13"
                             Padding="8,6"
                             BorderBrush="#CBD5E0"
                             BorderThickness="1"/>
                </StackPanel>
                
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Описание отчёта:" FontSize="12" Margin="0,0,0,5"/>
                    <TextBox x:Name="ReportDescriptionTextBox" 
                             Text="Отчёт создан пользователем с выбранными критериями"
                             FontSize="13"
                             Padding="8,6"
                             BorderBrush="#CBD5E0"
                             BorderThickness="1"
                             Height="60"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"/>
                </StackPanel>
                
                <!-- Критерии отчёта -->
                <TextBlock Text="Выберите критерии для включения в отчёт:" Style="{StaticResource SectionTextStyle}"/>
                
                <!-- Системная информация -->
                <TextBlock Text="Системная информация" FontSize="13" FontWeight="Medium" 
                           Foreground="#4A5568" Margin="0,10,0,5"/>
                <StackPanel Margin="20,0,0,0">
                    <CheckBox x:Name="IncludeOSInfo" Content="Информация об операционной системе" 
                              Style="{StaticResource CheckBoxStyle}" IsChecked="True"/>
                    <CheckBox x:Name="IncludeComputerInfo" Content="Информация о компьютере" 
                              Style="{StaticResource CheckBoxStyle}" IsChecked="True"/>
                    <CheckBox x:Name="IncludeUserInfo" Content="Информация о пользователе" 
                              Style="{StaticResource CheckBoxStyle}" IsChecked="True"/>
                    <CheckBox x:Name="IncludeDateTimeInfo" Content="Дата и время создания" 
                              Style="{StaticResource CheckBoxStyle}" IsChecked="True"/>
                </StackPanel>
                
                <!-- Аппаратная информация -->
                <TextBlock Text="Аппаратная информация" FontSize="13" FontWeight="Medium" 
                           Foreground="#4A5568" Margin="0,15,0,5"/>
                <StackPanel Margin="20,0,0,0">
                    <CheckBox x:Name="IncludeCPUInfo" Content="Информация о процессоре" 
                              Style="{StaticResource CheckBoxStyle}" IsChecked="True"/>
                    <CheckBox x:Name="IncludeMemoryInfo" Content="Информация о памяти" 
                              Style="{StaticResource CheckBoxStyle}" IsChecked="True"/>
                    <CheckBox x:Name="IncludeDiskInfo" Content="Информация о дисках" 
                              Style="{StaticResource CheckBoxStyle}" IsChecked="True"/>
                    <CheckBox x:Name="IncludeGPUInfo" Content="Информация о видеокарте" 
                              Style="{StaticResource CheckBoxStyle}" IsChecked="True"/>
                    <CheckBox x:Name="IncludeMotherboardInfo" Content="Информация о материнской плате" 
                              Style="{StaticResource CheckBoxStyle}" IsChecked="True"/>
                </StackPanel>
                
                <!-- Производительность -->
                <TextBlock Text="Производительность" FontSize="13" FontWeight="Medium" 
                           Foreground="#4A5568" Margin="0,15,0,5"/>
                <StackPanel Margin="20,0,0,0">
                    <CheckBox x:Name="IncludePerformanceInfo" Content="Текущая производительность системы" 
                              Style="{StaticResource CheckBoxStyle}" IsChecked="False"/>
                    <CheckBox x:Name="IncludeNetworkInfo" Content="Информация о сети" 
                              Style="{StaticResource CheckBoxStyle}" IsChecked="False"/>
                    <CheckBox x:Name="IncludeProcessInfo" Content="Информация о процессах" 
                              Style="{StaticResource CheckBoxStyle}" IsChecked="False"/>
                </StackPanel>
                
                <!-- Дополнительные опции -->
                <TextBlock Text="Дополнительные опции" FontSize="13" FontWeight="Medium" 
                           Foreground="#4A5568" Margin="0,15,0,5"/>
                <StackPanel Margin="20,0,0,0">
                    <CheckBox x:Name="IncludeScreenshots" Content="Включить скриншоты (если доступно)" 
                              Style="{StaticResource CheckBoxStyle}" IsChecked="False"/>
                    <CheckBox x:Name="IncludeLogs" Content="Включить системные логи" 
                              Style="{StaticResource CheckBoxStyle}" IsChecked="False"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Кнопки управления -->
        <Border Grid.Row="1" Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CancelButton" 
                        Content="Отмена" 
                        Style="{StaticResource ButtonStyle}"
                        Background="#E2E8F0"
                        BorderBrush="#CBD5E0"
                        BorderThickness="1"
                        Click="CancelButton_Click"/>
                <Button x:Name="CreateButton" 
                        Content="Создать" 
                        Style="{StaticResource ButtonStyle}"
                        Background="#4682B4"
                        Foreground="White"
                        BorderThickness="0"
                        Click="CreateButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
